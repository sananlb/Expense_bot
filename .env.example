# Bot settings
BOT_TOKEN=your_bot_token_here
ADMIN_ID=0
BOT_MODE=polling  # Options: polling (development) or webhook (production)

# Admin monitoring bot settings (optional)
MONITORING_BOT_TOKEN=your_monitoring_bot_token_here
ADMIN_TELEGRAM_ID=your_telegram_id_here

# Database
DATABASE_URL=sqlite:///expense_bot.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Django settings
SECRET_KEY=django-insecure-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,80.66.87.178,expensebot.duckdns.org

# CSRF trusted origins (for admin panel)
CSRF_TRUSTED_ORIGINS=http://expensebot.duckdns.org,https://expensebot.duckdns.org,http://80.66.87.178:8000,http://localhost:8000

# SSL Redirect (set to False when using HTTP proxy)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# OpenAI API (multiple keys supported)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_KEY_1=your_first_openai_key
OPENAI_API_KEY_2=your_second_openai_key

# Google AI (Gemini) - multiple keys supported
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_API_KEY_1=your_first_google_key
GOOGLE_API_KEY_2=your_second_google_key

# Yandex SpeechKit (optional - for Russian voice recognition)
# Get API key from: https://cloud.yandex.com/docs/iam/operations/api-key/create
YANDEX_API_KEY=your_yandex_api_key
YANDEX_FOLDER_ID=your_yandex_folder_id
YANDEX_SPEECH_TOPIC=general:rc

# AI Provider Settings
# Provider selection: google or openai
AI_PROVIDER_CATEGORIZATION=google
AI_PROVIDER_CHAT=google
AI_PROVIDER_INSIGHTS=google
AI_PROVIDER_DEFAULT=google

# Model selection for Google
GOOGLE_MODEL_CATEGORIZATION=gemini-2.0-flash-exp
GOOGLE_MODEL_CHAT=gemini-2.5-flash
GOOGLE_MODEL_INSIGHTS=gemini-2.5-flash
GOOGLE_MODEL_DEFAULT=gemini-2.0-flash-exp

# Model selection for OpenAI
OPENAI_MODEL_CATEGORIZATION=gpt-4o-mini
OPENAI_MODEL_CHAT=gpt-4o-mini
OPENAI_MODEL_INSIGHTS=gpt-4o-mini
OPENAI_MODEL_DEFAULT=gpt-4o-mini

# DeepSeek API (multiple keys for rotation)
DEEPSEEK_API_KEY_1=your_deepseek_key_1
DEEPSEEK_API_KEY_2=your_deepseek_key_2
DEEPSEEK_MODEL_CATEGORIZATION=deepseek-chat
DEEPSEEK_MODEL_CHAT=deepseek-chat
DEEPSEEK_MODEL_DEFAULT=deepseek-chat
DEEPSEEK_MODEL_INSIGHTS=deepseek-reasoner

# Qwen (DashScope) API (multiple keys for rotation)
DASHSCOPE_API_KEY_1=your_qwen_key_1
DASHSCOPE_API_KEY_2=your_qwen_key_2
QWEN_MODEL_CATEGORIZATION=qwen-plus
QWEN_MODEL_CHAT=qwen-plus
QWEN_MODEL_INSIGHTS=qwen-plus
QWEN_MODEL_DEFAULT=qwen-plus

# OpenRouter API (for voice recognition and chat via Gemini)
OPENROUTER_API_KEY=your_openrouter_key
OPENROUTER_MODEL_VOICE=google/gemini-2.0-flash-001
OPENROUTER_MODEL_CHAT=google/gemini-2.0-flash-001
OPENROUTER_MODEL_INSIGHTS=google/gemini-2.0-flash-001

# OpenRouter Proxy Settings (for bypassing regional blocks)
# SOCKS5 proxy for OpenRouter requests
AI_PROXY_URL=socks5://your_proxy_ip:1080
# Connection mode: 'proxy' (via proxy) or 'direct' (direct connection)
OPENROUTER_CONNECTION_MODE=proxy

# Redis (required for production, optional for development)
REDIS_URL=redis://:redis_password@redis:6379/0
CELERY_BROKER_URL=redis://:redis_password@redis:6379/0

# Docker settings (for production)
DB_NAME=expense_bot
DB_USER=expense_user
DB_PASSWORD=your_secure_password
DB_HOST=db
DB_PORT=5432

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Celery settings
CELERY_RESULT_BACKEND=redis://:redis_password@redis:6379/0
CELERY_ACCEPT_CONTENT=json
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=Europe/Moscow
USE_DB_BEAT=true

# Webhook settings (for production)
WEBHOOK_URL=https://expensebot.duckdns.org
WEBHOOK_PATH=/webhook/
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8000

# Environment
ENVIRONMENT=production

# Sentry Error Tracking (optional but recommended for production)
# Get your DSN from https://sentry.io after creating a project
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
